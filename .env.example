# ==================== 12Factor Configuration ====================
# Todas las configuraciones sensibles deben estar en variables de entorno
# Copiar este archivo a .env y configurar los valores

# ==================== DATABASE ====================
DATABASE_URL=postgresql+asyncpg://fixitnow:fixitnow123@postgres:5432/fixitnow_db
POSTGRES_USER=fixitnow
POSTGRES_PASSWORD=fixitnow123
POSTGRES_DB=fixitnow_db

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379

# ==================== RABBITMQ ====================
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ==================== MICROSERVICES URLs ====================
AUTH_SERVICE_URL=http://auth-service:8001
CATALOG_SERVICE_URL=http://catalog-service:8002
BOOKING_SERVICE_URL=http://booking-service:8003
ADMIN_SERVICE_URL=http://admin-service:8005

# ==================== EMAIL (SMTP) ====================
# Configurar con tu cuenta de Gmail o servicio SMTP
# Para Gmail: Usar "App Password" en vez de tu contrase√±a regular
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==================== FRONTEND ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8003

# ==================== MONITORING ====================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin123

# ==================== ENVIRONMENT ====================
ENV=development
# production, staging, development
